mixin form-select(labelText, selectName, multiple, options, placeholder)

  //- labelText: string
      - selectName: string
      - multiple: boolean
      - options: [],
      - placeholder: string

  .form-select
    include UIKit/control-label/control-label.pug
    +control-label(labelText, selectName)(class='form-select__label')

    .form-select__mobile
      select.form-select__select.form-select__select_not-selected(
        name=selectName,
        id=selectName,
        multiple=multiple,
      )&attributes(attributes)
        each optionsItem in options
          if optionsItem.heading
            optgroup(label=optionsItem.heading)
              each subOptionItem in optionsItem.items
                option(value=subOptionItem.value) #{subOptionItem.text ? subOptionItem.text : subOptionItem.value}
          else
            option(value=optionsItem.value) #{optionsItem.text ? optionsItem.text : optionsItem.value}
      if !multiple
        .form-select__subsidiary
          span.form-select__placeholder.form-select__select_not-selected #{placeholder}


    .form-select__desktop
      button.form-select__select.form-select__select_not-selected(type=button, id=`pseudo-${selectName}`) #{placeholder}
      .form-select__arrow
        include Icons/arrow-down.pug

      include UIKit/dropdown/dropdown.pug
      +dropdown(options, selectName)(class='form-select__dropdown')



    include UIKit/form-control-error/form-control-error.pug
    +form-control-error()(class='form-select__error')
